        reg = <0>;
        vcap_2_in: endpoint {
          remote-endpoint = <&thermal_con_2_out>;
        };
      };
    };
  };
  vcap_3 {
    compatible = "xlnx,video";
    dma-names = "port0";
    dmas = <&v_frmbuf_wr_3 0>;
