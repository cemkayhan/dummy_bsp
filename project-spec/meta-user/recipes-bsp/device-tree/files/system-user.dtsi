&amba_pl {
  vcap_1 {
    compatible = "xlnx,video";
    dma-names = "port0";
    dmas = <&v_frmbuf_wr_1 0>;
    ports {
      #address-cells = <1>;
      #size-cells = <0>;
      port@0 {
        direction = "input";
        reg = <0>;
        vcap_1_in: endpoint {
          remote-endpoint = <&thermal_con_1_out>;
        };
      };
    };
  };
  vcap_2 {
    compatible = "xlnx,video";
    dma-names = "port0";
    dmas = <&v_frmbuf_wr_2 0>;
    ports {
      #address-cells = <1>;
      #size-cells = <0>;
